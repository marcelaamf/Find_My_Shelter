<section class="shelters-index">
  <header class="page-header">

 <h1> Donation Report </h1>

  <%= form_tag filter_admin_donations_path, method: :get do %>
    <div class="field">
      <%= label_tag :start_date, 'Start Date' %>
      <%= text_field_tag :start_date, nil, placeholder: 'dd/mm/yy', value: params[:start_date] %> 
      <%= label_tag :end_date, 'End Date' %>
      <%= text_field_tag :end_date, nil, placeholder: 'dd/mm/yy', value: params[:end_date] %>

    <%= submit_tag 'Filter' %>
  <% end %>
  </div>
  <br>

 
    <h4>All Donations</h4>
    <div class="panel panel-default ">

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Shelter</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <%= render @donations %>
        </tbody>
      </table>

    </div>

</section>



