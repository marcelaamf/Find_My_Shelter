<section class="form">
<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  <div class="form-field">
    First Name: <br> <%= f.text_field :first_name %>
  </div>
  <div class="form-field">
    Last Name: <br> <%= f.text_field :last_name %>
  </div>
  <div class="form-field">
    Email: <br> <%= f.text_field :email %>
  </div>
  <div class="form-field">
    Password: <br> <%= f.password_field :password %>
  </div>
  <div class="form-field">
    Password Confirmation: <br> <%= f.password_field :password_confirmation %>
  </div>
    <%= f.submit "Submit", class: "submit-button" %>

<% end %>

</section>