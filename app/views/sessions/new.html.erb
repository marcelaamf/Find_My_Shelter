<section class="form">
<h1>Login</h1>

<%= form_tag '/login' do %>
  <div class="form-field">
  Email: <br> <%= text_field_tag :email %>
  </div>
  <div class="form-field">
  Password: <br> <%= password_field_tag :password  %>
  </div>
  <%= submit_tag "Submit", class: "submit-button" %>
<% end %>

</section>